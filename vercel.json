{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "npm install -g npm@latest && npm install",
        "buildCommand": "npm run build"
      }
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/" }],
  "engines": {
    "node": "20.x",
    "npm": ">=10.0.0"
  }
}